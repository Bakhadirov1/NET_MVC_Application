@model DBSD_CW2.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label" hidden></label>
                <input asp-for="EmployeeId" class="form-control" hidden />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="row justify-content-between">
                <div class="row col-12 no-gutters mb-2">
                    <h2 class="col-4">Current photo:</h2>
                    <img class="col" src="@Url.Action("sendPhoto", new { id = Model.EmployeeId })" width="300" />
                </div>
                <div class="row col-6">
                    <div class="form-group col-12">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Photo" class="control-label"></label>
                        <input class="form-control" type="file" name="Photo" />
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="DateOfBirth" class="control-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" type="date"/>
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="row col-6">
                    <div class="form-group col-12">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="PositionId" class="control-label"></label>
                        <select asp-for="PositionId" asp-items="ViewBag.listOfPositions" class="form-control"></select>
                        <span asp-validation-for="PositionId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="ProjectId" class="control-label"></label>
                        <select asp-for="ProjectId" asp-items="ViewBag.listOfProjects" class="form-control"></select>
                        <span asp-validation-for="ProjectId" class="text-danger"></span>
                    </div>
                </div>


            </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
